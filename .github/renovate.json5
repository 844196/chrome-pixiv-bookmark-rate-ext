{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "commitMessagePrefix": "⬆️ ",
  "extends": [
    "config:base",
    "group:allNonMajor",
    "docker:disableMajor"
  ],
  "packageRules": [
    {
      "groupName": "linters",
      "extends": ["packages:linters"],
      "automerge": true,
      "major": {
        "automerge": false
      }
    },
    {
      "groupName": "react",
      "extends": ["monorepo:react"],
      "matchPackageNames": [
        "@types/react",
        "@types/react-dom"
      ]
    }
  ]
}
